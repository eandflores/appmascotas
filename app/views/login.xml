<Alloy>
	<Window class="container">
		<View id="wrapper"></View>
		<View id="marcas">
			<ImageView class="flecha" backgroundImage="/img/FlechaIzq.jpg" onClick="atras"></ImageView>
		</View>
		<View id="main">
				<ImageView id="imagenIndex"></ImageView>
		</View>
		<View id="inputs">
				<TextField id="inputCorreo" hintText="CORREO"></TextField>
				<TextField id="inputClave" hintText="CLAVE" passwordMask="true"></TextField>
		</View>
		<View id="layout">
			<Label id="recuperarContraseña" onClick="recuperarContraseña">¿HAS OLVIDADO TU CONTRASEÑA?</Label>
		</View>
		<View id="footer">
			<Button id="registro" onClick="registro">INICIAR SESIÓN</Button>
		</View>
	</Window>
</Alloy>